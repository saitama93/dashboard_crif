{% extends "base.html.twig" %}

{% block title %}
	Sessions
{% endblock %}

{% block body %}
	<div class="my-3 container-fluid">
		<div class="d-flex justify-content-between align-items-center">
			<h1 class="my-3">Liste des sessions</h1>
			<a href="{{ path('session_create') }}" class="btn btn-success">Nouvelle session</a>
		</div>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th></th>
				</tr>
			</thead>

			<tbody>

				{% for session in sessions %}
					<tr>
						<td>{{ session.id }}</td>
						<td>{{ session.name }}</td>
						<td>
							<a href="{{ path('session_edit', {'slug' : session.slug}) }}" class="btn btn-primary">

								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('session_delete', {'slug' : session.slug}) }}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>

					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>

{% endblock %}
