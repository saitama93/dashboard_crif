{% extends "base.html.twig" %}

{% block title %}
	Liste des classes
{% endblock %}

{% block body %}
	<div class="my-3 container-fluid">
		<div class="d-flex justify-content-between align-items-center">
			<h1>Liste des classes</h1>
			<a href="{{ path('classroom_new') }}" class="btn btn-success">Ajouter une classe</a>
		</div>

		<table class="table table-hover">
			<thead>
				<th>Nom</th>
				<th>Nombre de place</th>
				<th>DÃ©but</th>
				<th>Fin</th>
				<th>Session</th>

			</thead>
			<tbody>
				{% for classRoom in classRooms %}
					<tr>
						<td>{{ classRoom.name }}</td>
						<td>{{ classRoom.capacity }}</td>
						<td>{{ classRoom.startAt |date("m/d/Y") }}</td>
						<td>{{ classRoom.endAt |date("m/d/Y") }}</td>
						<td>{{ classRoom.session.name }}</td>
						<td class="d-flex justify-content-between align-items-center">
							<a href="{{ path('classroom_edit', {'id' : classRoom.id}) }}" class="btn btn-primary">

								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('classroom_delete', {'slug' : classRoom.slug}) }}" class="btn btn-danger">

								<i class="fas fa-trash"></i>
							</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
